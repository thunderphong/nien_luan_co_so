extends layout.pug

block content
    .container-sm
        .row.h-100 
            .col-sm-12.my-auto
                h1 Register

                form#signUpForm(action="", method="POST")
                    .form-group
                        label Account
                        input.form-control(type="text", name="account", value=filledField ? filledField.account : "")
                        small.hidden-error-text.form-text(data-name="account")
                        small.form-text.text-muted You can use letters and numbers.
                    .form-group
                        label Password
                        input.form-control(type="password", name="password")
                        small.hidden-error-text.form-text(data-name="password")
                        small.form-text.text-muted You should have a strong password with letters, numbers and any special character.
                    .form-group
                        label Comfirm password
                        input.form-control(type="password", name="cPassword")
                        small.hidden-error-text.form-text(data-name="cPassword")
                    button.btn.btn-primary(type="submit") Register
    script(src="axios.min.js")
    script
        include ../validates/register.validate.js
        include ../constants/error-message.js
        include ../constants/regex.js              